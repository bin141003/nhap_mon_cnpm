{
	"compilerOptions": {
	  "experimentalDecorators": true,
	  "target": "es2016",
	  "module": "commonjs",
	  "rootDir": "./",
	  "moduleResolution": "node",
	  "baseUrl": "./",
	  "typeRoots": ["./src/types", "./node_modules/@types"],
	  "resolveJsonModule": true,
	  "sourceMap": true,
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "noImplicitThis": true,
	  "alwaysStrict": true,
	  "skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
  }